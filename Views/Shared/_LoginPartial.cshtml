@using Microsoft.AspNetCore.Identity
@using TP1_ARQWEB.Areas.Identity.Data
 

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="locat" class="nav-link text-dark" asp-area="" asp-controller="Reports" asp-action="Index">Reportes</a>
        </li>
        <li class="nav-item">
            <a id="locat" class="nav-link text-dark" asp-area="" asp-controller="Locations" asp-action="Index">Locaciones</a>
        </li>

        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hola @UserManager.GetUserName(User)!  </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Desloguearse</button>
            </form>
        </li>
    }
</ul>
