@model TP1_ARQWEB.Models.Location

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Location</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Model.Nombre
        </dd>
        <dt class="col-sm-2">
            Cantidad de personas en esta Locación
        </dt>
        <dd class="col-sm-10">
            @Model.CantidadPersonasDentro / @Model.Capacidad
        </dd>
    </dl>
</div>

@{
    string inOut;

    if ((bool)ViewData["userInLocation"]) inOut = "Out";
    else inOut = "In";

}
    

<div>

    @if ((bool)ViewData["userInfected"])
    {

        <p class="text-danger"> Usted está actualmente infectado y no puede acceder a nuevas Locaciones. </p>}
    else if ((bool)ViewData["locationFull"] && !(bool)ViewData["userInLocation"]) {
        <p class="text-info"> Esta locación está actualmente llena. Inténtelo en otro momento. </p>
    }
    else {
        <form asp-action="@inOut" asp-route-id="@Model.Id" method="post">
            <div class="form-group">
                <input type="submit" value="Check @inOut" class="btn btn-primary" />
            </div>
        </form>

        @if ((bool)ViewData["userAtRisk"])
        {
            <p class="text-danger"> ADVERTENCIA: Usted está actualmente en riesgo de haber sido contagiado. Por favor considere aislarse en su hogar. </p>
        }
    }
</div>