@model TP1_ARQWEB.Models.Location

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Location</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Model.Nombre
        </dd>
        <dt class="col-sm-2">
            Capacidad
        </dt>
        <dd class="col-sm-10">
            @Model.Capacidad
        </dd>
    </dl>
</div>

@{
    string inOut;

    if ((bool)ViewData["userInLocation"]) inOut = "Out";
    else inOut = "In";

}
    <form asp-action="@inOut" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <input type="submit" value="Check @inOut" class="btn btn-primary" />
        </div>
    </form>

<div>
    <a asp-action="@inOut" asp-route-id="@Model.Id">Check @inOut</a>
</div>
